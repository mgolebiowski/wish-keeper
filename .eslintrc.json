{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "plugin:@hapi/recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double", {
      "allowTemplateLiterals": true
    }],
    "semi": ["error", "always"],
    "array-bracket-spacing": ["error", "always"],
    "@hapi/capitalize-modules": 0
  }
}
